mixin team(value = false)
    +b.team(id="Team")
        .container
            .row.justify-center
                +e.H2.heading !{value.heading}
                each val, index in value.list
                    +e.card(class="col-12 col-md-6 col-lg-4 col-xxl-3")
                        if index === 1
                            +e.IMG.sphere(src="img/content/decorate/specular.webp" class="_" + val.sphereType)
                        +e.card-wrp
                            if index !== 1
                                +e.IMG.sphere(src="img/content/decorate/specular.webp" class="_" + val.sphereType)
                            +e.card-inner
                                +e.content
                                    +e.top
                                        +picture({
                                            folder: "team",
                                            name: val.imgName,
                                            width: val.width,
                                            height: val.height,
                                            x2: true,
                                            alt: "Фотография члена команды"
                                        })
                                    +e.bottom
                                        +e.name #{val.name}
                                        +e.position #{val.position}
                                +e.overflow
                                    +e.name._text-left #{val.name}
                                    +e.position._text-left #{val.position}
                                    +e.text #{val.text}

